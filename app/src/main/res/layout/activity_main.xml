<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="0,1"
    tools:context=".MainActivity">
    <TableRow>


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="welcome hello@gmail.com"
            android:layout_span="2"
            android:layout_gravity="right"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />

    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping by Categories"
            android:layout_span="2"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <ImageView
            android:id="@+id/electronicImage"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="onclick"
            app:srcCompat="@drawable/electronic"
            />
        <ImageView
            android:id="@+id/clothImage"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            app:srcCompat="@drawable/clothing" />
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <TextView
            android:id="@+id/electronic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronics"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/clothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clothing"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TableRow>
        <ImageView
            android:id="@+id/beatyImage"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="onclick"
            app:srcCompat="@drawable/beauty"
            />
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:onClick="onclick"
            app:srcCompat="@drawable/food" />
    </TableRow>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TableRow>
        <TextView
            android:id="@+id/beauty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beauty"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Food"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>


    </TableRow>
</TableLayout>